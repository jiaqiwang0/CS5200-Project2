<h2>Addresses</h2>
<div class="row g-3">
  <% for (let add of addresses) { %>

    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= add.street1 %></h5>
        <h5 class="card-title"><%= add.street2 %></h5>
        <div class="card-text">
          <div>city: <%= add.city %></div>
          <div>state: <%= add.state %></div>
          <div>zip code: <%= add.zipCode %></div>

          <div>
            <a class="btn btn-outline-primary" href="<%= '/addresses/' + add._id + '/edit' %>">Edit</a>
            <a class="btn btn-outline-danger" href="<%= '/addresses/' + add._id + '/delete' %>">Delete</a>
          </div>
        </div>
      </div>
    </div>


  <% } %>

 <%- include("./AddressesPagination.ejs", { currentPage, lastPage }) %>

</div>
