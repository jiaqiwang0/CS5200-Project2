<h2>Participants</h2>
<div class="row g-3">
  <% for (let par of participants) { %>

    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= par.firstName %></h5>
        <h5 class="card-title"><%= par.lastName %></h5>
        <div class="card-text">
          <div>Phone: <%= par.phone %></div>
          <div>Email: <%= par.email %></div>

          <div>
            <a class="btn btn-outline-primary" href="<%= '/participants/' + par.participantID + '/edit' %>">Edit</a>
            <a class="btn btn-outline-danger" href="<%= '/participants/' + par.participantID + '/delete' %>">Delete</a>
          </div>
        </div>
      </div>
    </div>


  <% } %>

 <%- include("./ParticipantsPagination.ejs", { currentPage, lastPage }) %>

</div>
